<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:drawable="@drawable/ic_drawer_caret_up"
        />
    <item
        android:state_expanded="true"
        android:drawable="@drawable/ic_drawer_caret_down"
        />
    <item
        android:state_empty="true"
        android:drawable="@drawable/ic_drawer_caret_down"
        />
    <!-- state_activated can be used to substitute state_empty and state_expanded -->
</selector>